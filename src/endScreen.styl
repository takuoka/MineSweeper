
#spreadWrapper

	display none
	
	position absolute
	top 0px
	left 0px

	width 100%
	height 100%
	max-height 100%

	// border 3px solid red
	overflow hidden

	#spreadBg
		position absolute
		top 300px
		left 300px
		z-index 100

		width 100px
		height 100px
		border-radius 50px
		
		background-color rgba(255,0,0,0.5)
		
		transform scale(0.1)
		transition-property transform
		transition-duration 1s
		&.spread
			transform scale(30)



#gameEndArea
	
	display none
	
	z-index 300
	opacity 0
	transition-property opacity
	transition-duration 1s
	&.show
		opacity 1
	
	.wrapper
		p
			text-align: center
			a
				transition-property background-color, color
				transition-duration 0.3s
				font-size 50px
				font-weight bold
				padding 10px
				background-color rgba(0,0,0, 0)
				&:hover
					opacity 0.9
					background-color rgba(0,0,0, 0.1)
				&:active
					opacity 0.7
					background-color rgba(80,200,80, 0.9)
	